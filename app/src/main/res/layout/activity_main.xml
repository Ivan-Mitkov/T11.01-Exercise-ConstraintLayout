<?xml version="1.0" encoding="utf-8"?>
<!--  (17) Surround the Constraint layout with a ScrollView -->
<!--  (2) Replace the Relative layout with a ConstraintLayout -->
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewPassengerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/passenger_label" />

    <TextView
        android:id="@+id/textViewPassengerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@id/textViewPassengerLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewPassengerLabel"
        android:text="@string/passenger_name" />

    <ImageView
        android:id="@+id/rightRectangle"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPassengerName"
        app:srcCompat="@drawable/shape_rectangle_stroke" />

    <ImageView
        android:id="@+id/leftRectangle"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPassengerName"
        app:srcCompat="@drawable/shape_rectangle_stroke" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintBottom_toBottomOf="@+id/rightRectangle"
        app:layout_constraintEnd_toStartOf="@+id/leftRectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rightRectangle"
        app:layout_constraintTop_toTopOf="@+id/rightRectangle"
        app:layout_constraintVertical_bias="0.478"
        app:srcCompat="@android:drawable/divider_horizontal_dark" />

    <TextView
        android:id="@+id/textViewOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="@+id/rightRectangle"
        app:layout_constraintTop_toTopOf="@+id/divider"
        android:text="@string/origin_code" />

        <TextView
            android:id="@+id/textViewDetination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/destination_code"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="@+id/leftRectangle"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/divider" />

    <TextView
        android:id="@+id/boardingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rightRectangle"
        android:text="@string/boarding_time_label" />

    <TextView
        android:id="@+id/boardingTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/boardingTextView"
        app:layout_constraintTop_toBottomOf="@+id/boardingTextView"
        android:text="@string/boarding_time" />

    <TextView
        android:id="@+id/departureTextView"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/boardingTimeTV"
        app:layout_constraintTop_toBottomOf="@+id/boardingTimeTV"
        android:text="@string/departure_time_label" />

    <TextView
        android:id="@+id/departureTime"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorGood"
        app:layout_constraintStart_toStartOf="@+id/departureTextView"
        app:layout_constraintTop_toBottomOf="@+id/departureTextView"
        android:text="@string/departure_time" />

    <TextView
        android:id="@+id/boardingInLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftRectangle"
        android:text="@string/boarding_in_label" />

    <TextView
        android:id="@+id/boardingInTime"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="@+id/boardingInLabel"
        app:layout_constraintTop_toBottomOf="@+id/boardingInLabel"
        android:text="@string/boarding_in_time" />

    <TextView
        android:id="@+id/arrivalTv"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/boardingInTime"
        app:layout_constraintTop_toBottomOf="@+id/boardingInTime"
        android:text="@string/arrival_time_label" />

    <TextView
        android:id="@+id/arrivalTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorGood"
        app:layout_constraintStart_toStartOf="@+id/arrivalTv"
        app:layout_constraintTop_toBottomOf="@+id/arrivalTv"
        android:text="@string/arrival_time" />

    <ImageView
        android:id="@+id/tableHeaderImage"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="@+id/departureTime"
        app:layout_constraintTop_toBottomOf="@+id/departureTime"
        app:srcCompat="@drawable/shape_rectangle_stroke" />

        <ImageView
            android:id="@+id/tableImage"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/tableHeaderImage"
            app:layout_constraintStart_toStartOf="@+id/tableHeaderImage"
            app:layout_constraintTop_toBottomOf="@+id/tableHeaderImage"
            app:srcCompat="@drawable/shape_rectangle_stroke" />

        <TextView
            android:id="@+id/terminalLabelTV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:text="TERMINAL"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toTopOf="@+id/tableImage"
            app:layout_constraintLeft_toLeftOf="@+id/tableImage"
            app:layout_constraintStart_toStartOf="@+id/tableHeaderImage"
            app:layout_constraintTop_toTopOf="@+id/tableHeaderImage" />

        <TextView
            android:id="@+id/textViewGateLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="GATE"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toTopOf="@+id/tableImage"
            app:layout_constraintEnd_toStartOf="@+id/textViewSeatLabel"
            app:layout_constraintStart_toEndOf="@+id/terminalLabelTV"
            app:layout_constraintTop_toTopOf="@+id/tableHeaderImage" />

        <TextView
            android:id="@+id/textViewSeatLabel"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:text="SEAT"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toTopOf="@+id/tableImage"
            app:layout_constraintEnd_toEndOf="@+id/tableHeaderImage"
            app:layout_constraintTop_toTopOf="@+id/tableHeaderImage" />

        <TextView
            android:id="@+id/textViewTerminal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tableImage"
            app:layout_constraintRight_toRightOf="@+id/tableImage"
            app:layout_constraintTop_toTopOf="@+id/tableImage" />

        <TextView
            android:id="@+id/textViewGate"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="52B"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/tableImage"
            app:layout_constraintEnd_toStartOf="@+id/textViewSeat"
            app:layout_constraintStart_toEndOf="@+id/textViewTerminal"
            app:layout_constraintTop_toTopOf="@+id/tableImage" />

        <TextView
            android:id="@+id/textViewSeat"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:text="24A"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tableImage"
            app:layout_constraintEnd_toEndOf="@+id/tableImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tableImage" />

        <ImageView
            android:id="@+id/barCodeImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/barcode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableImage"
            app:srcCompat="@drawable/shape_rectangle_stroke" />

        <TextView
            android:id="@+id/textViewFlightNumber"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/flight_code"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

    <ImageView
        android:id="@+id/imagePlanePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_plane"
        android:backgroundTint="@color/colorPrimaryLight"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/divider" />

    <!--  (3) Create a TextView for the Passenger label and name -->
    <!--  (4) Use tool:text to set the text value -->

    <!--  (5) Create an ImageView for the left rectangle -->
    <!--  (6) Set the background to the shape_rectangle_stroke drawable -->

    <!--  (7) Create an ImageView for the divider -->

    <!--  (8) Create an ImageView for the rightRectangle -->

    <!--  (9) Create a TextView for the origin code, the destination code and the flight code -->

    <!--  (15) Import the plane image SVG file into the drawable directory and name it art_plane -->
    <!--  (16) Create an ImageView for the plane and set the background to art_plane drawable -->

    <!--  (10) Create a TextView for the time texts and their corresponding labels -->

    <!--  (11) Create an ImageView for the blue table's header -->

    <!--  (12) Create an ImageView for the blue table's body -->

    <!--  (13) Create a TextView for each of the labels and text fields in the blue table -->

    <!--  (14) Create an ImageView for the barcode -->

</android.support.constraint.ConstraintLayout>

</ScrollView>
</layout>